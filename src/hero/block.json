{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "triablocks/hero",
	"version": "0.2.0",
	"title": "Hero",
	"category": "triablocks",
	"icon": "layout",
	"description": "A full-width hero block with elegant transitions and customizable layout options.",
	"example": {},
	"attributes": {
		"image": {
			"type": "object"
		},
		"imagePosition": {
			"type": "string",
			"default": "right"
		},
		"overlayEnabled": {
			"type": "boolean",
			"default": false
		},
		"overlayOpacity": {
			"type": "number",
			"default": 40
		},
		"overlayColor": {
			"type": "string",
			"default": "#000000"
		},
		"contentPosition": {
			"type": "string",
			"default": "center"
		},
		"textColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"minHeight": {
			"type": "number",
			"default": 500
		}
	},
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"align": ["wide", "full"]
	},
	"textdomain": "triablocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
