{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "triablocks/hero",
	"version": "0.2.0",
	"title": "Hero",
	"category": "triablocks",
	"icon": "layout",
	"description": "A dynamic hero block with customizable layout options and Tailwind CSS.",
	"example": {},
	"attributes": {
		"image": {
			"type": "object"
		},
		"imagePosition": {
			"type": "string",
			"default": "right"
		},
		"overlayEnabled": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"textdomain": "triablocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
